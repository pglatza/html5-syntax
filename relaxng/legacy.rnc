# #####################################################################
##  RELAX NG Schema for HTML 5: Obsolete Elements                     #
# #####################################################################

## These elements are allowed here and disallowed in Schematron in order to 
## work around RELAX NG limitations and to thereby get more useful messages.

## Centering: <center>

	center.elem =
		element center { center.inner & center.attrs }
	center.attrs =
		( common.attrs )
	center.inner =
		( common.inner.flow )

	common.elem.flow |= center.elem

## Inline Styling: <font>

	font.elem =
		element font { font.inner & font.attrs }
	font.attrs =
		( common.attrs )
	font.inner =
		( common.inner.phrasing )

	common.elem.phrasing |= font.elem

## Larger Font: <big>

	big.elem =
		element big { big.inner & big.attrs }
	big.attrs =
		( common.attrs )
	big.inner =
		( common.inner.flow )

	common.elem.phrasing |= big.elem

## Struck Text: <s>

	s.elem =
		element s { s.inner & s.attrs }
	s.attrs =
		( common.attrs )
	s.inner =
		( common.inner.flow )

	common.elem.phrasing |= s.elem

## Struck Text: <strike>

	strike.elem =
		element strike { strike.inner & strike.attrs }
	strike.attrs =
		( common.attrs )
	strike.inner =
		( common.inner.flow )

	common.elem.phrasing |= strike.elem

