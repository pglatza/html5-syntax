## Form Output: <output>

	output.elem =
		element output { output.inner & output.attrs }
	output.elem.static =
		element output { output.inner.static & output.attrs }
	output.elem.strict =
		element output { output.inner.strict & output.attrs }
	output.elem.strict.static =
		element output { output.inner.strict.static & output.attrs }
	output.attrs =
		(	common.attrs
		&	common-form.attrs.name?
		&	common-form.attrs.disabled?
		&	output.attrs.for?
		#FIXME figure out how onchange, onforminput and onformchange
		#fit together with a scripting module.
		)
		output.attrs.for = 
			attribute for {
				common.data.idrefs #REVISIT spec says space--not whitespace
			}
	output.inner =
		( common.inner.struct-inline ) #REVIST check HTML-compatibility
	output.inner.static =
		( common.inner.struct-inline.static )
	output.inner.strict =
		( common.inner.strict-inline )
	output.inner.strict.static =
		( common.inner.strict-inline.static )

	common.elem.struct-inline |= output.elem
	common.elem.struct-inline.static |= output.elem.static
	common.elem.strict-inline |= output.elem.strict
	common.elem.strict-inline.static |= output.elem.strict.static

## Text Area: <textarea>, extensions

	textarea.attrs.rows-and-cols-wf1.inner &=
		notAllowed
	textarea.attrs.rows-and-cols-wf1 |= 
		empty
	textarea.attrs &=
		(	common-form.attrs.maxlength?
		&	common-form.attrs.pattern? 
		&	common-form.attrs.inputmode?
		&	textarea.attrs.accept?
		&	textarea.attrs.rows?
		&	(	(	textarea.attrs.wrap.hard 
				&	textarea.attrs.cols
				)
			|	(	textarea.attrs.wrap.soft?
				&	textarea.attrs.cols?
				)
			)
		)
		textarea.attrs.accept =
			attribute accept {
				common.data.mimetype
			}
		textarea.attrs.wrap.hard =
			attribute wrap {
				string "hard"
			}
		textarea.attrs.wrap.soft =
			attribute wrap {
				string "soft"
			}
			
## Option Group: <optgroup>, extensions
	optgroup.inner &= 
		( optgroup.elem* )

## Selection Menu: <select>, extensions
	select.attrs &=
		(	common-form.attrs.accesskey?
		&	common-form.attrs.data?
		)

## List of Prefill Data: <datalist>

	#REVISIT should the options in datalist be non-selectable?

	datalist.elem.strict-inline =
		element datalist { option.elem* & common.inner.strict-inline & datalist.attrs }
	datalist.elem.strict-inline.static =
		element datalist { option.elem* & common.inner.strict-inline.static & datalist.attrs }
	datalist.elem.struct-inline = #REVISIT check HTML-compatibility
		element datalist { option.elem* & common.inner.struct-inline & datalist.attrs }
	datalist.elem.struct-inline.static =
		element datalist { option.elem* & common.inner.struct-inline.static & datalist.attrs }
	datalist.elem.block =
		element datalist { option.elem* & common.inner.block & datalist.attrs }
	datalist.elem.block.static =
		element datalist { option.elem* & common.inner.block.static & datalist.attrs }
	datalist.attrs =
		(	common.attrs
		&	common-form.attrs.data?
		)

	common.elem.strict-inline |= datalist.elem.strict-inline
	common.elem.strict-inline.static |= datalist.elem.strict-inline.static
	common.elem.struct-inline |= datalist.elem.struct-inline
	common.elem.struct-inline.static |= datalist.elem.struct-inline.static
	common.elem.block |= datalist.elem.block
	common.elem.block.static |= datalist.elem.block.static

## Complex Submit Button: <button type='submit'>, extensions

	button.submit.attrs &=
		(	common-form.attrs.action? 
		&	common-form.attrs.autofocus? 
		&	input.attrs.enctype? 
		&	common-form.attrs.method? 
		&	common-form.attrs.replace? 
		&	common-form.attrs.target? 
		)
	
## Complex Reset Button: <button type='reset'>, extensions

	button.reset.attrs &=
		( common-form.attrs.autofocus? )
	
## Complex Push Button: <button type='button'>, extensions

	button.button.attrs &=
		( common-form.attrs.autofocus? )

## Form: <form>, extensions
	form.attrs.method.data |= 
		( string "put" | "delete" )
	form.attrs.enctype.data |= 
		( string "application/x-www-form+xml" | string "text/plain" )
	form.attrs &= 
		(	common-form.attrs.replace?
		&	common-form.attrs.data?
		)
	
	form.elem.empty =
		element form { form.inner.empty & form.attrs }
	form.inner.empty =
		( empty )

	head.inner.misc |=
		( form.elem.empty & nonHTMLizable )
	
## Fieldset: <fieldset>

	fieldset.attrs &=
		(	common-form.attrs.disabled?
		&	common-form.attrs.form?
		)

