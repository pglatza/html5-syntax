## File Upload: <input type='file'>, Extensions

	input.file.attrs &=
		(	shared-form.attrs.autofocus? 
		&	shared-form.attrs.required? 
		&	input.file.attrs.min? 
		&	input.file.attrs.max? 
		)
		input.file.attrs.min =
			attribute min {
				common.data.integer.non-negative
			}
		input.file.attrs.max =
			attribute max {
				common.data.integer.positive
			}

