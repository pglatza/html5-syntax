## Submit Button: <input type='submit'>, Extensions

	input.submit.attrs &=
		(	shared-form.attrs.action? 
		&	shared-form.attrs.autofocus? 
		&	input.attrs.enctype? 
		&	shared-form.attrs.method? 
		&	shared-form.attrs.replace? 
		&	shared-form.attrs.target? 
		)

