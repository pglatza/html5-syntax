# #####################################################################
##  RELAX NG Schema for HTML 5: Sectioning Markup                     #
# #####################################################################

# #####################################################################
## Headings

## Heading (Rank 1): <h1>

	h1.elem =
		element h1 { h1.inner & h1.attrs }
	h1.elem.static =
		element h1 { h1.inner.static & h1.attrs }
	h1.attrs =
		( common.attrs )
	h1.inner =
		( common.inner.strict-inline )
	h1.inner.static =
		( common.inner.strict-inline.static )

	common.inner.block &= h1.elem*
	common.inner.block.static &= h1.elem.static*
	common.inner.block.header &= h1.elem*
	common.inner.block.header.static &= h1.elem.static*

