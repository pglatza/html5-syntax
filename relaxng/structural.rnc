## Dialog: <dialog>

	dialog.elem =
		element dialog { dialog.inner & dialog.attrs }
	dialog.elem.static =
		element dialog { dialog.inner.static & dialog.attrs }
	dialog.attrs =
		( common.attrs )
	dialog.inner =
		(	(	dt.elem
			,	dd.elem
			)*
		)
	dialog.inner.static =
		(	(	dt.elem.static
			,	dd.elem.static
			)*
		)

	common.elem.block |= dialog.elem
	common.elem.block.static |= dialog.elem.static
