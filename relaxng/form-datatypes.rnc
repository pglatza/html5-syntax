## MIME types
		
	form.data.mimetypelist = 
		w:mime-type-list
		
	form.data.charsetlist =
		string # FIXME should be a "a space- and/or comma-delimited 
		       # list of charset values"

## ECMAScript Regular Expression
		
	form.data.pattern = 
		w:pattern
		
## Temporal
		
	form.data.datetime-local =
		w:datetime-local
	
	form.data.date =
		w:date
	
	form.data.month =
		w:month
	
	form.data.week =
		w:week
	
	form.data.time =
		w:time

## Email

	form.data.email =
